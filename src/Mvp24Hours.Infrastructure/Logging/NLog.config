<?xml version="1.0" encoding="utf-8" ?>
<!-- Arquivo de exemplo de configuração de log para gravar falhas do programa em arquivos -->
<!-- Copie esse arquivo para sua aplicação Console, Web, Windows, ...-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">
  <variable name="verbose" value="${longdate} | ${machinename} | ${processid} | ${processname} | ${level} | ${logger} | ${message}"/>
  <targets>
    <target name="logfile" xsi:type="File" layout="${verbose}" fileName="${basedir}/logs/${date:format=yyyy-MM-dd}-webapi.log" />
    <target name="eventlog" xsi:type="EventLog" layout="${message}" log="Application" source="$safeprojectname$" />-->
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="logfile" />
    <logger name="*" minlevel="Trace" writeTo="eventlog" />
  </rules>
</nlog>